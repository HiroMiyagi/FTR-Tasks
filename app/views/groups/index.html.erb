<div class="group-boad p-3">
  <h3 class="boad-title">グループボード</h3>
  <div class="container-fluid">
    <div class="row">
      <% current_user.groups.each do |group| %>
        <div class="group-box col-3 p-3">
          <%= link_to group_path(group), class: 'group' do %>
            <div class="group-name"><%= group.name %></div>
            <div class="group-contents"><%= link_to content_tag(:i, '', class: 'fas fa-trash'), group, method: :delete, data: { confirm: "#{group.name}を削除して大丈夫ですか？" } %></div>
          <% end %>
        </div>
      <% end %>
      <%= link_to new_group_path do %>
        <div class="creategroup-box col-3 p-3">
            <i class="far fa-plus-square"></i>
            <div>グループを作成</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
